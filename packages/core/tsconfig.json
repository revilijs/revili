{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "NodeNext",
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "types": ["node"]
